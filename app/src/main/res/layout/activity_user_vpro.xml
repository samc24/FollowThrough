<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.samch.followthrough.UserVPro"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <VideoView
        android:id="@+id/videoView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="340.5dp"
        android:layout_marginStart="340.5dp" />

    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="340.5dp"
        android:layout_marginRight="340.5dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/user"
        android:layout_width="103dp"
        android:layout_height="97dp"
        android:layout_alignEnd="@+id/videoView2"
        android:layout_alignRight="@+id/videoView2"
        android:layout_alignTop="@+id/pro"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/play"
        android:src="@android:drawable/ic_media_play"
        android:tint="#FF27AE60"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="95dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/pro"
        android:layout_width="103dp"
        android:layout_height="97dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/play"
        android:src="@android:drawable/ic_media_play"
        android:tint="#FF27AE60"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="95dp" />

    <ImageButton
        android:id="@+id/profs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/videoView1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/videoView1"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/fullscreen"
        android:tint="#FF27AE60"
        app:srcCompat="@drawable/ic_fullscreen_white_18px" />

    <ImageButton
        android:id="@+id/userfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/videoView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/videoView2"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/fullscreen"
        android:tint="#FF27AE60"
        app:srcCompat="@drawable/ic_fullscreen_white_18px"
        android:visibility="gone"/>

    <Button
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="106dp"
        android:text="Choose Video" />


</RelativeLayout>
