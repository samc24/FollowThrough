<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.samch.followthrough.UserVPro"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <View android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <VideoView
        android:id="@+id/videoView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="365.5dp"
        android:layout_marginStart="365.5dp"/>

    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="365.5dp"
        android:layout_marginEnd="365.5dp"/>

    <ImageButton
        android:id="@+id/user"
        android:layout_width="103dp"
        android:layout_height="97dp"
        android:layout_alignEnd="@+id/videoView2"
        android:layout_alignRight="@+id/videoView2"
        android:layout_alignTop="@+id/pro"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/play"
        android:src="@android:drawable/ic_media_play"
        android:tint="#ffffff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="95dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/pro"
        android:layout_width="103dp"
        android:layout_height="97dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/play"
        android:src="@android:drawable/ic_media_play"
        android:tint="#ffffff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="95dp" />

    <ImageButton
        android:id="@+id/profs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/videoView1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/videoView1"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/fullscreen"
        android:tint="#ffffff"
        app:srcCompat="@drawable/ic_fullscreen_white_18px" />

    <ImageButton
        android:id="@+id/userfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/videoView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/videoView2"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/fullscreen"
        android:tint="#ffffff"
        app:srcCompat="@drawable/ic_fullscreen_white_18px"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/choose"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/choose"
        android:contentDescription="@string/choose"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pro"
        android:layout_alignParentStart="true"
        android:layout_marginStart="114dp"
        android:text="Choose Video"
        android:textColor="@color/NBABlue" />


</RelativeLayout>
