<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samch.followthrough.StephVDame">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/google_pixe"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000">

        <VideoView
            android:id="@+id/videoView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="340.5dp"
            android:layout_marginStart="340.5dp" />

        <VideoView
            android:id="@+id/videoView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="340.5dp"
            android:layout_marginRight="340.5dp" />

        <ImageButton
            android:id="@+id/dame"
            android:layout_width="103dp"
            android:layout_height="97dp"
            android:layout_alignEnd="@+id/videoView2"
            android:layout_alignRight="@+id/videoView2"
            android:layout_alignTop="@+id/steph"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_play"
            android:tint="#FF27AE60"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="95dp"
            android:contentDescription="@string/play" />

        <ImageButton
            android:id="@+id/steph"
            android:layout_width="103dp"
            android:layout_height="97dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_play"
            android:tint="#FF27AE60"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="95dp"
            android:contentDescription="@string/play" />

        <ImageButton
            android:id="@+id/stephfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/videoView1"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/videoView1"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="19dp"
            android:background="@android:color/transparent"
            android:tint="#FF27AE60"
            app:srcCompat="@drawable/ic_fullscreen_white_18px"
            android:contentDescription="@string/fullscreen" />

        <ImageButton
            android:id="@+id/damefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/videoView2"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/videoView2"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="19dp"
            android:background="@android:color/transparent"
            android:tint="#FF27AE60"
            app:srcCompat="@drawable/ic_fullscreen_white_18px"
            android:contentDescription="@string/fullscreen" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
