<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samch.followthrough.Startup">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/google_pixe"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000">

        <TextView
            android:id="@+id/follow_thro"
            android:layout_width="264dp"
            android:layout_height="79dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:gravity="center_horizontal"
            android:text="@string/follow_thro"
            android:textAppearance="@style/follow_thro"
            android:textStyle="bold"
            android:textColor="#FF27AE60">
        </TextView>

        <View
            android:id="@+id/logo1"
            android:layout_width="112dp"
            android:layout_height="439dp"
            android:layout_below="@+id/follow_thro"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo1" />

        <Button
            android:id="@+id/login"
            android:layout_width="167dp"
            android:layout_height="55dp"
            android:layout_below="@+id/logo1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="#FF27AE60"
            android:gravity="center"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>





</android.support.constraint.ConstraintLayout>
